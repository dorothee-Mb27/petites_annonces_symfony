{% extends 'base.html.twig' %}

{% block title %} Acceuil {% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css" integrity="sha384-vSIIfh2YWi9wW0r9iZe7RJPrKwp6bG+s9QZMoITbCckVJqGCCRhc+ccxNcdpHuYu"
 crossorigin="anonymous">
{% endblock  %}
{% block body %}
    {% for annonce in annonces %}
        <div class="container">
            <div class="card shadow-1 fx-row">
                <div class="primary d-flex vcenter fx-center px-4">
                    {# <img src="{{ 
                    asset('uploads/images/annonces/'~ annonce.images[img1].name)|imagine_filter('square')}}"
                    alt="{{ annonce.title }}" >  #}
                </div>
                <div class="flex fx-col fx-grow">
                    <div class="card-header">
                        <a href="{{ path('annonces_details',
                        {slug: annonce.slug })}}"> {{ annonce.title }} </a>
                    </div>
                    <div class="card-content">
                    <p>Categorie : {{ annonce.categories.name }}</p>
                    <p>
                        {{ annonce.content|striptags|u.truncate(30, '...') }}.
                    </p>
                    </div>
                    <div class="txt-red">
                   
                    {% if is_granted("ROLE_USER") %}
                         {% for favoris in annonce.favoris %} 
                            {% if favoris.id == app.user.id %}
                             {# <a href="{{ path('annonces_retrait_favoris', {id: annonce.id}) }}">
                             <i class="fas fa-heart"></i></a> #}
                             {% else %}
                             {# <a href="{{ path('annonces_ajout_favoris', {id: annonce.id}) }}">
                             <i class="fas fa-heart"></i></a> #}
                             {% endif %}
                        {% else %}
                        {# <a href="{{ path('annonces_ajout_favoris', {id: annonce.id}) }}">
                             <i class="far fa-heart"></i></a> #}
                        {% endfor %} 
                    {# {{dump(favoris)}} #}
                   
                     {% else %}
                        <i class="far fa-heart"></i>
                    {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
